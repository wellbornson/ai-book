{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "rag-chat-bot/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/src/api/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/rag-chat-bot/$1"
    }
  ]
}